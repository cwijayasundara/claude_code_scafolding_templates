{
  "permissions": {
    "allow": [
      "Bash(python3 *)",
      "Bash(python *)",
      "Bash(pip *)",
      "Bash(pip3 *)",
      "Bash(pytest *)",
      "Bash(ruff *)",
      "Bash(mypy *)",
      "Bash(make *)",
      "Bash(make)",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(docker *)",
      "Bash(az *)",
      "Bash(mkdir *)",
      "Bash(ls *)",
      "Bash(ls)"
    ]
  },
  "env": {
    "SDLC_MODE": "full", 
    "AGENT_TEAMS_ENABLED": "true",
    "AGENT_TEAMS_ENFORCE": "true",
    "AGENT_TEAMS_MAX_TEAMMATES": "3",
    "AGENT_TEAMS_WORKTREE_DIR": ".worktrees",
    "AGENT_TEAMS_AUTO_CLEANUP": "true"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/sdlc-gate.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/worktree-guard.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/branch-guard.sh",
            "timeout": 10
          },
          {
            "type": "command",
            "command": ".claude/hooks/bash-file-guard.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/lint-python.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/lint-frontend.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/teammate-idle.sh",
            "timeout": 120
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/teammate-completed.sh",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
